<%= turbo_frame_tag "quote_#{quote.id}" do %>
  <div class="quote">
    <p><strong>Content:</strong> <%= quote.name %></p>

    <div class="quote-actions">
      <%= link_to 'Edit', edit_quote_path(quote), class: 'btn btn-warning' %>
      <%= link_to "Delete", quote, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
